sed -i 's/#en_GB.UTF/en_GB.UTF/g' /etc/locale.gen && \
locale-gen && \
echo "[multilib]" >> /etc/pacman.conf && \
echo "Include = /etc/pacman.d/mirrorlist" >> /etc/pacman.conf && \
pacman -Sy \
  openssh  \
  grub-bios \
  linux-headers \
  i3 \
  dmenu \
  git \
  vim \
  firefox \
  alsa-utils \
  nethack \
  xfce4-terminal \
  xterm \
  xorg-server \
  xorg-xinit \
  xorg-server-utils \
  mesa xf86-video-intel \
  lib32-intel-dri \
  lib32-mesa \
  lib32-libgl ranger docker vagrant ansible virtualbox-host-modules-arch virtualbox sudo && \
grub-install --target=i386-pc --recheck /dev/sda && \
cp /usr/share/locale/en\@quot/LC_MESSAGES/grub.mo /boot/grub/locale/en.mo && \
grub-mkconfig -o /boot/grub/grub.cfg && \
systemctl enable sshd.service && \
useradd -g wheel -m -s /bin/bash sean && \
echo "setxkbmap gb && exec i3" > /home/sean/.xinitrc && \
curl chicken.ninja/scripts/vimrc > /home/sean/.vimrc && \
mkdir -p /home/sean/.config/i3 && \
curl chicken.ninja/scripts/i3config > /home/sean/.config/i3/config && \
mkdir -p /home/sean/.config/xfce4/terminal && \
curl chicken.ninja/scripts/i3config > /home/sean/.config/xfce4/terminal/terminalrc && \

wget https://addons.mozilla.org/firefox/downloads/latest/vimfx/addon-404785-latest.xpi /tmp/addon-404785-latest.xpi
firefox /tmp/addon-404785-latest.xpi

echo "remember to set a password, visudo and install vimfx firefox plugin"
