# Example disk setup

parted --script /dev/sda -- mklabel msdos \
		       mkpart primary ext4 1 275GiB \
		       mkpart primary linux-swap 275GiB -1 \
		       set 1 boot on && \
		       mkfs.ext4 /dev/sda1 && \
		       mount /dev/sda1 /mnt && \
		       pacstrap /mnt base && \
		       genfstab -U /mnt >> /mnt/etc/fstab
fi
